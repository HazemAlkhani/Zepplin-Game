{
  "com.badlogic.gdx.graphics.g2d.BitmapFont": {
    "default-font": { "file": "fonts/default.fnt" },
    "larger-font": { "file": "fonts/larger-font.fnt" }
  },
  "com.badlogic.gdx.scenes.scene2d.ui.Label$LabelStyle": {
    "default": {
      "font": "default-font",
      "fontColor": { "r": 1, "g": 1, "b": 1, "a": 1 }
    },
    "larger": {
      "font": "larger-font",
      "fontColor": { "r": 1, "g": 0.18039216, "b": 0.17254902, "a": 1 } // Yellow color
    },
    "highlighted": {
      "font": "default-font",
      "fontColor": { "r": 0, "g": 1, "b": 0, "a": 1 } // Green color
    },
    "white": {
      "font": "default-font",
      "fontColor": { "r": 1, "g": 1, "b": 1, "a": 1 } // White color for wind speed
    },
    "green": {
      "font": "default-font",
      "fontColor": { "r": 0, "g": 1, "b": 0, "a": 1 } // Green color for zeppelin speed
    },
    "red": {
      "font": "default-font",
      "fontColor": { "r": 1, "g": 0, "b": 0, "a": 1 } // Red color for timer
    }
  },
  "com.badlogic.gdx.scenes.scene2d.ui.TextButton$TextButtonStyle": {
    "default": {
      "up": "default-round",
      "down": "default-round-down",
      "font": "default-font",
      "fontColor": { "r": 1, "g": 1, "b": 1, "a": 1 }
    },
    "larger": {
      "up": "default-round",
      "down": "default-round-down",
      "font": "larger-font",
      "fontColor": { "r": 1, "g": 1, "b": 0, "a": 1 } // Yellow color
    }
  },
  "com.badlogic.gdx.scenes.scene2d.ui.Window$WindowStyle": {
    "default": {
      "titleFont": "default-font",
      "titleFontColor": { "r": 1, "g": 1, "b": 1, "a": 1 },
      "background": "background"
    }
  }
}
